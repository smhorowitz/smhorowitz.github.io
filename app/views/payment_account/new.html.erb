<div class="container">
  <h4>Create new payment account</h4>
  <div class="well">
    <%= form_for @account do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
